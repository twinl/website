    ($date1 ne "2013022800" or $date2 ne "2013022823") and
    ($date1 ne "2013030100" or $date2 ne "2013030123") and
    ($date1 ne "2013030200" or $date2 ne "2013030223") and
    ($date1 ne "2013030300" or $date2 ne "2013030323")
   )) {
   $date2 = $date1;
   $date = "$date1-$date1";
   $year2 = $year1;
   $month2 = $month1;
   $day2 = $day1;
   $hour2 = $hour1;
